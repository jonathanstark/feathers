fieldset {
  margin:0;

  input[type=search] { -webkit-appearance:none; }
  input[type=search]::-webkit-search-decoration,
  input[type=search]::-webkit-search-cancel-button,
  input[type=search]::-webkit-search-results-button,
  input[type=search]::-webkit-search-results-decoration {
    display: none;
  }

  input[type=text],
  input[type=email],
  input[type=tel],
  input[type=number],
  input[type=date],
  input[type=search],
  input[type=password] {
    background:<%= Feathers::Config.white %>;
    border:1px solid <%= Feathers::Config.medium_1 %>;
    padding:0.5em;
    @include border-radius(0.25em);
  }

  input.error {
    border:1px solid darken(<%= Feathers::Config.error_background %>, 20%);
  }

  label {
    display:block;
    line-height:2em;
  }

  label.horizontal {
    display:inline-block;
    min-width:16em;
  }

  label.inline {
    display:inline-block;
    margin-right:2em;
    input {
      -webkit-appearance:none;
      -moz-appearance:none;
      appearance:none;
      border:none;
      display:inline-block;
      float:left;
      height:20px;
      margin-right:1em;
      width:20px;
    }
    input[type=radio] {
      background:url(data:image/png;base64,) top left no-repeat;
    }
    input[type=radio]:checked {
      background:url(data:image/png;base64,) bottom left no-repeat;
    }
    input[type=checkbox] {
      background:url(data:image/png;base64,) top left no-repeat;
    }
    input[type=checkbox]:checked {
      background:url(data:image/png;base64,) bottom left no-repeat;
    }
  }

  legend {
    background:<%= Feathers::Config.light_1 %>;
    color:<%= Feathers::Config.dark_1 %>;
    padding:0.5em;
    @include border-radius(0.25em);
  }

  select {
    -webkit-appearance:none;
    -moz-appearance:none;
    appearance:none;
    background:url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAJCAIAAAC9o5sfAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAH1JREFUeNqkUTsKwCAMNaGDk4qDoGcQZwdHj+1pHLyFpE6l1P5o3xRCHu8TICL2Fch+YNmmUkpr7fSIc55Scs4d9rC3PfMBwBjjvbfWIuIdeeYrpYam1vpV5pzzZk8IEUIY/KvMcNr20O+9xxillHeN0QVqrfQE+PPnVYABAAwmZGpbdzcOAAAAAElFTkSuQmCC) 100% 50% no-repeat <%= Feathers::Config.white %>;
    border:1px solid <%= Feathers::Config.medium_1 %>;
    line-height:1.25em;
    min-width:16em;
    padding:0.5em 3em 0.5em 0.5em;
    @include border-radius(0.25em);
  }

  input[type=date] {
    -webkit-appearance:none;
    -moz-appearance:none;
    appearance:none;
    border:1px solid <%= Feathers::Config.medium_1 %>;
    line-height:1.25em;
    padding:0.5em;
    @include border-radius(0.25em);
  }

  span.error-details {
    color:darken(<%= Feathers::Config.error_background %>, 50%);
    display:inline-block;
    margin-left:1em;
    i {
      color:darken(<%= Feathers::Config.error_background %>, 50%);
    }
  }

}

fieldset > div {
  overflow:hidden;
  padding:0.5em;
}

input[type=reset], input[type=submit], input[type=button] {
  display:inline-block;
  -webkit-tap-highlight-color:rgba(0, 0, 0, 0);
  -moz-tap-highlight-color:rgba(0, 0, 0, 0);
  -o-tap-highlight-color:rgba(0, 0, 0, 0);
  tap-highlight-color:rgba(0, 0, 0, 0);
}

.breadcrumbs {
  background:<%= Feathers::Config.light_1 %>;
  border:1px solid <%= Feathers::Config.light_2 %>;
  color:<%= Feathers::Config.dark_1 %>;
  padding:1em;
  span {
    color:<%= Feathers::Config.dark_2 %>;
  }
}

.drop-menu {
  background:<%= Feathers::Config.light_1 %>;
  display:inline-block;
  padding:0.5em 1em;
  position:relative;
  @include border-radius(0.5em);
  ul {
    background:<%= Feathers::Config.light_1 %>;
    display:none;
    left:0.5em;
    margin:0;
    min-width:12em;
    padding:0;
    position:absolute;
    top:2.5em;
    z-index:1000;
    @include border-radius(0.5em);
    li {
      list-style:none;
      margin:0;
      padding:0;
      a {
        background:<%= Feathers::Config.light_1 %>;
        display:block;
        padding:0.5em;
      }
      a:hover {
        color:<%= Feathers::Config.light_1 %>;
        background:<%= Feathers::Config.dark_1 %>;
        @include border-radius(0.5em);
      }
    }
  }
  ul:before {
    content: "";
    position: absolute;
    width: 0;
    height: 0;
    border-width: 12px;
    border-style: solid;
    border-color: transparent transparent <%= Feathers::Config.light_1 %> transparent;
    top: -24px;
    left: 1em;
    z-index:1000;
  }
}
.drop-menu:hover {
  background:<%= Feathers::Config.medium_1 %>;
  > a {
    color:<%= Feathers::Config.dark_2 %>;
    i {
      color:<%= Feathers::Config.dark_2 %>;
    }
  }
  ul {
    display:block;
  }
}

ul.horizontal-menu, ul.vertical-menu {
  margin:0 0 1em 0;
  padding:0;
  li {
    list-style:none;
    margin:0;
    padding:0;
  }
}

ul.horizontal-menu {
  background:<%= Feathers::Config.light_1 %>;
  overflow:hidden;
  padding:0.5em 0;
  @include border-radius(0.5em);
  li {
    display:inline;
    a {
      display:inline-block;
      float:left;
      margin:0 0.5em;
      padding:0 1em;
    }
    a:hover {
      background:<%= Feathers::Config.dark_1 %>;
      color:<%= Feathers::Config.white %>;
      @include border-radius(0.5em);
    }
  }
}

ul.vertical-menu {
  li {
    margin:0;
    padding:0;
    a {
      background:<%= Feathers::Config.light_1 %>;
      display:block;
      margin-bottom:0.5em;
      padding:0.5em 1em;
      @include border-radius(0.5em);
      i {
        display:inline-block;
        float:right;
        line-height:1.5em;
        @include opacity(0.2);
      }
    }
    a:hover {
      background:<%= Feathers::Config.dark_1 %>;
      color:<%= Feathers::Config.white %>;
      i {
        color:<%= Feathers::Config.white %>;
        @include opacity(0.4);
      }
    }
  }
}

.icon-bar {
  border:1px solid <%= Feathers::Config.medium_1 %>;
  display:block;
  height:3em;
  line-height:2em;
  padding:0.5em;
  text-align:center;
  @include background-gradient(lighten(<%= Feathers::Config.light_2 %>, 10%), <%= Feathers::Config.light_2 %>);
  a {
    display:inline-block;
    margin:0 2em;
    i {
      font-size:180%;
      color:<%= Feathers::Config.dark_1 %>;
      @include text-shadow(1px 1px 1px <%= Feathers::Config.white %>);
    }
  }
  a:hover, a:active {
    i {
      color:#333;
    }
  }
}

ul.link-list {
  margin:0;
  padding:0;
  overflow-scroll:touch;
  -webkit-overflow-scroll:touch;
  li {
    list-style:none;
    margin:0;
    padding:0;
    a {
      display:block;
      padding:0.5em;
      margin:0;
      border-bottom:1px solid <%= Feathers::Config.medium_1 %>;
      i {
        color:<%= Feathers::Config.dark_1 %>;
        display:inline-block;
        float:right;
        line-height:1.5em;
        @include opacity(0.2);
      }
    }
    a:hover {
      background:<%= Feathers::Config.light_2 %>;
    }
  }
  li:last-child {
    a {
      border-bottom:none;
    }
  }
}